<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/colorPrimary"
    tools:context=".CounselorLoginActivity">

    <TextView
        android:id="@+id/counselorLoginTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome Back Counselor!"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please sign in to your account"
        android:textColor="@color/white"
        android:textSize="19dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:layout_marginTop="15dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="320dp"
        android:layout_height="360dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_gravity="center">
            <EditText
                android:id="@+id/counselorLoginEmail"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:textColorHint="@color/gray_app"
                android:textColor="@color/gray_app"
                android:hint="Email address"
                android:inputType="text"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/counselorLoginPassword"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:textColorHint="@color/gray_app"
                android:textColor="@color/gray_app"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="16sp"  />
            <Button
                android:id="@+id/counselorLoginButton"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_bg"
                android:text="Sign In"
                android:textSize="16sp"
                android:textAlignment="center" />
            <TextView
                android:id="@+id/counselorForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gray_app"
                android:layout_marginTop="30dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>